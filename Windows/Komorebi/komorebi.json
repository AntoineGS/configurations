{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 2,
  "default_container_padding": 2,
  "border": true,
  "border_width": 4,
  "border_offset": -1,
  "border_colours": {
    "single": "#61afef",
    "stack": "#56b6c2",
    "monocle": "#d19a66",
    "unfocused": "#747C84"
  },
  "force_manage_rules": [
    {
      "kind": "Exe",
      "id": "WindowsTerminal.exe",
      "matching_strategy": "Equals"
    }
  ],
  "manage_rules": [
    {
      "kind": "Class",
      "id": "TAppBuilder",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Class",
      "id": "TfrmDataNavigator",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "main",
          "layout": "BSP"
        },
        {
          "name": "shell",
          "layout": "BSP",
          "initial_workspace_rules": [
            { "kind": "Exe", "id": "WindowsTerminal.exe", "matching_strategy": "Equals" },
            { "kind": "Exe", "id": "pwsh.exe", "matching_strategy": "Equals" },
            { "kind": "Exe", "id": "powershell.exe", "matching_strategy": "Equals" },
            { "kind": "Exe", "id": "cmd.exe", "matching_strategy": "Equals" }
          ]
        },
        {
          "name": "browser",
          "layout": "BSP",
          "initial_workspace_rules": [
            { "kind": "Exe", "id": "chrome.exe", "matching_strategy": "Equals" }
          ]
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "secondary",
          "layout": "BSP"
        },
        {
          "name": "git",
          "layout": "BSP",
          "initial_workspace_rules": [
            { "kind": "Exe", "id": "gitkraken.exe", "matching_strategy": "Equals" }
          ]
        },
        {
          "name": "sql",
          "layout": "BSP",
          "initial_workspace_rules": [
            { "kind": "Exe", "id": "MDExplorer.exe", "matching_strategy": "Equals" },
            { "kind": "Exe", "id": "datagrip64.exe", "matching_strategy": "Equals" }
          ]
        },
        {
          "name": "explorer",
          "layout": "BSP",
          "initial_workspace_rules": [
            { "kind": "Exe", "id": "TOTALCMD64.EXE", "matching_strategy": "Equals" }
          ]
        }
      ]
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "bds.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "SFClient2.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "ChainDrive SF.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Class",
      "id": "Dialog",
      "matching_stategy": "EndsWith"
    },
    {
      "kind": "Class",
      "id": "Notification",
      "matching_stategy": "EndsWith"
    },
    {
      "kind": "Class",
      "id": "Dlg",
      "matching_stategy": "EndsWith"
    },
    {
      "kind": "Class",
      "id": "Popup",
      "matching_stategy": "EndsWith"
    }
  ]
}
